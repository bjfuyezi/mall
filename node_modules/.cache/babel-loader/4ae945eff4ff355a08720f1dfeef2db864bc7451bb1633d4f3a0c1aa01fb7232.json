resses/user/${this.userId}`);\r\n        const data = await response.json();\r\n        if (data.status === 'success' && Array.isArray(data.data)) {\r\n          this.defaultAddress = data.data.find(addr => addr.isDefault === 1);\r\n        }\r\n      } catch (error) {\r\n        console.error('Error loading default address:', error);\r\n      }\r\n    }\r\n  },\r\n  created() {\r\n    const path = this.$route.path;\r\n    this.activeMenu = path.includes('address') ? 'address' : 'profile';\r\n    this.loadDefaultAddress();\r\n  },\r\n  watch: {\r\n    $route(to) {\r\n      this.activeMenu = to.path.includes('address') ? 'address' : 'profile';\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n.user-center {\r\n  padding: 20px;\r\n  background-color: #f5f5f5;\r\n  min-height: calc(100vh - 150px);\r\n\r\n  .el-container {\r\n    background-color: #fff;\r\n    border-radius: 8px;\r\n    box-shadow: 0 2px 12px 0 rgba(0,0,0,0.1);\r\n    min-height: calc(100vh - 190px);\r\n  }\r\n\r\n  .el-aside {\r\n    background-color: #fff;\r\n    border-right: 1px solid #e6e6e6;\r\n    padding: 0;\r\n\r\n    .user-info-card {\r\n      padding: 20px;\r\n      text-align: center;\r\n      border-bottom: 1px solid #e6e6e6;\r\n      background-color: #fafafa;\r\n\r\n      .avatar {\r\n        width: 80px;\r\n        height: 80px;\r\n        line-height: 80px;\r\n        border-radius: 50%;\r\n        background-color: #ff6700;\r\n        color: white;\r\n        margin: 0 auto 15px;\r\n        \r\n        i {\r\n          font-size: 40px;\r\n        }\r\n      }\r\n\r\n      .welcome {\r\n        font-size: 18px;\r\n        color: #333;\r\n        margin-bottom: 5px;\r\n        font-weight: bold;\r\n      }\r\n\r\n      .user-email {\r\n        font-size: 14px;\r\n        color: #666;\r\n        margin-bottom: 15px;\r\n      }\r\n\r\n      .default-address {\r\n        text-align: left;\r\n        margin-top: 15px;\r\n        padding-top: 15px;\r\n        border-top: 1px dashed #e6e6e6;\r\n\r\n        .title {\r\n          font-size: 14px;\r\n          color: #666;\r\n          margin-bottom: 5px;\r\n        }\r\n\r\n        .content {\r\n          font-size: 13px;\r\n          color: #333;\r\n          line-height: 1.4;\r\n        }\r\n      }\r\n    }\r\n  }\r\n\r\n  .el-main {\r\n    padding: 0;\r\n    display: flex;\r\n    flex-direction: column;\r\n\r\n    .main-nav {\r\n      padding: 0 20px;\r\n      border-bottom: 1px solid #e6e6e6;\r\n      background-color: #fff;\r\n\r\n      .user-menu {\r\n        display: flex;\r\n        justify-content: center;\r\n        border-bottom: none;\r\n\r\n        .el-menu-item {\r\n          font-size: 15px;\r\n          height: 50px;\r\n          line-height: 50px;\r\n          margin: 0 20px;\r\n\r\n          &:hover, &.is-active {\r\n            color: #ff6700;\r\n            border-bottom: 2px solid #ff6700;\r\n\r\n            i {\r\n              color: #ff6700;\r\n            }\r\n          }\r\n\r\n          i {\r\n            margin-right: 10px;\r\n          }\r\n        }\r\n      }\r\n    }\r\n\r\n    .main-content {\r\n      flex: 1;\r\n      padding: 20px;\r\n      background-color: #fff;\r\n    }\r\n  }\r\n}\r\n</style> "],"mappings":";;;AAkDA,SAAAA,UAAA;AAEA;EACAC,IAAA;EACAC,KAAA;IACA;MACAC,UAAA;MACAC,cAAA;IACA;EACA;EACAC,QAAA;IACA,GAAAL,UAAA;EACA;EACAM,OAAA;IACAC,aAAAC,GAAA;MACA,IAAAA,GAAA;QACA,KAAAC,OAAA,CAAAC,IAAA;MACA,WAAAF,GAAA;QACA,KAAAC,OAAA,CAAAC,IAAA;MACA;IACA;IACA,MAAAC,mBAAA;MACA;QACA,MAAAC,QAAA,SAAAC,KAAA,8CAAAC,MAAA;QACA,MAAAZ,IAAA,SAAAU,QAAA,CAAAG,IAAA;QACA,IAAAb,IAAA,CAAAc,MAAA,kBAAAC,KAAA,CAAAC,OAAA,CAAAhB,IAAA,CAAAA,IAAA;UACA,KAAAE,cAAA,GAAAF,IAAA,CAAAA,IAAA,CAAAiB,IAAA,CAAAC,IAAA,IAAAA,IAAA,CAAAC,SAAA;QACA;MACA,SAAAC,KAAA;QACAC,OAAA,CAAAD,KAAA,mCAAAA,KAAA;MACA;IACA;EACA;EACAE,QAAA;IACA,MAAAC,IAAA,QAAAC,MAAA,CAAAD,IAAA;IACA,KAAAtB,UAAA,GAAAsB,IAAA,CAAAE,QAAA;IACA,KAAAhB,kBAAA;EACA;EACAiB,KAAA;IACAF,OAAAG,EAAA;MACA,KAAA1B,UAAA,GAAA0B,EAAA,CAAAJ,IAAA,CAAAE