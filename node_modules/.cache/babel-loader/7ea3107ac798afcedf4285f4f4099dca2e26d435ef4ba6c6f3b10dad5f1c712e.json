{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/esnext.iterator.constructor.js\";\nimport \"core-js/modules/esnext.iterator.find.js\";\nimport { mapGetters } from 'vuex';\nexport default {\n  name: 'UserCenter',\n  data() {\n    return {\n      activeMenu: 'profile',\n      defaultAddress: null\n    };\n  },\n  computed: {\n    ...mapGetters(['currentUser', 'userId'])\n  },\n  methods: {\n    handleSelect(key) {\n      if (key === 'profile') {\n        this.$router.push('/user/profile');\n      } else if (key === 'address') {\n        this.$router.push('/user/address');\n      }\n    },\n    async loadDefaultAddress() {\n      try {\n        const response = await fetch(`http://localhost:8081/addresses/user/${this.userId}`);\n        const data = await response.json();\n        if (data.status === 'success' && Array.isArray(data.data)) {\n          this.defaultAddress = data.data.find(addr => addr.isDefault === 1);\n        }\n      } catch (error) {\n        console.error('Error loading default address:', error);\n      }\n    }\n  },\n  created() {\n    const path = this.$route.path;\n    this.activeMenu = path.includes('address') ? 'address' : 'profile';\n    this.loadDefaultAddress();\n  },\n  watch: {\n    $route(to) {\n      this.activeMenu = to.path.includes('address') ? 'address' : 'profile';\n    }\n  }\n};","map":{"version":3,"names":["mapGetters","name","data","activeMenu","defaultAddress","computed","methods","handleSelect","key","$router","push","loadDefaultAddress","response","fetch","userId","json","status","Array","isArray","find","addr","isDefault","error","console","created","path","$route","includes","watch","to"],"sources":["src/views/UserCenter.vue"],"sourcesContent":["<template>\r\n  <div class=\"user-center\">\r\n    <el-container>\r\n      <el-main>\r\n        <div class=\"center-content\">\r\n          <!-- 用户信息和导航菜单 -->\r\n          <div class=\"user-info-section\">\r\n            <div class=\"user-info-card\">\r\n              <div class=\"avatar\">\r\n                <i class=\"el-icon-user-solid\"></i>\r\n              </div>\r\n              <div class=\"welcome\">欢迎，{{ currentUser.username }}</div>\r\n              <div class=\"user-email\">{{ currentUser.email }}</div>\r\n              <div class=\"default-address\" v-if=\"defaultAddress\">\r\n                <div class=\"title\">默认收货地址：</div>\r\n                <div class=\"content\">\r\n                  {{ defaultAddress.province }} {{ defaultAddress.addressContent }}\r\n                </div>\r\n              </div>\r\n            </div>\r\n            \r\n            <!-- 导航菜单 -->\r\n            <el-menu\r\n              :default-active=\"activeMenu\"\r\n              @select=\"handleSelect\"\r\n              class=\"user-menu\">\r\n              <el-menu-item index=\"profile\">\r\n                <i class=\"el-icon-edit\"></i>\r\n                <span>修改个人资料</span>\r\n              </el-menu-item>\r\n              <el-menu-item index=\"address\">\r\n                <i class=\"el-icon-location\"></i>\r\n                <span>收货地址</span>\r\n              </el-menu-item>\r\n            </el-menu>\r\n          </div>\r\n        </div>\r\n      </el-main>\r\n    </el-container>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { mapGetters } from 'vuex'\r\n\r\nexport default {\r\n  name: 'UserCenter',\r\n  data() {\r\n    return {\r\n      activeMenu: 'profile',\r\n      defaultAddress: null\r\n    }\r\n  },\r\n  computed: {\r\n    ...mapGetters(['currentUser', 'userId'])\r\n  },\r\n  methods: {\r\n    handleSelect(key) {\r\n      if (key === 'profile') {\r\n        this.$router.push('/user/profile')\r\n      } else if (key === 'address') {\r\n        this.$router.push('/user/address')\r\n      }\r\n    },\r\n    async loadDefaultAddress() {\r\n      try {\r\n        const response = await fetch(`http://localhost:8081/addresses/user/${this.userId}`);\r\n        const data = await response.json();\r\n        if (data.status === 'success' && Array.isArray(data.data)) {\r\n          this.defaultAddress = data.data.find(addr => addr.isDefault === 1);\r\n        }\r\n      } catch (error) {\r\n        console.error('Error loading default address:', error);\r\n      }\r\n    }\r\n  },\r\n  created() {\r\n    const path = this.$route.path;\r\n    this.activeMenu = path.includes('address') ? 'address' : 'profile';\r\n    this.loadDefaultAddress();\r\n  },\r\n  watch: {\r\n    $route(to) {\r\n      this.activeMenu = to.path.includes('address') ? 'address' : 'profile';\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n.user-center {\r\n  min-height: calc(100vh - 150px);\r\n  background-color: #f5f5f5;\r\n  \r\n  .el-container {\r\n    background-color: transparent;\r\n    min-height: 100%;\r\n  }\r\n\r\n  .el-main {\r\n    padding: 20px 0;\r\n    height: auto;\r\n    overflow: visible; // 防止出现滚动条\r\n  }\r\n\r\n  .center-content {\r\n    max-width: 300px;\r\n    margin: 0 auto;\r\n    display: flex;\r\n    justify-content: center;\r\n    height: auto;\r\n    overflow: visible; // 防止出现滚动条\r\n  }\r\n\r\n  .user-info-section {\r\n    width: 100%;\r\n    height: auto;\r\n  }\r\n\r\n  .user-info-card {\r\n    background-color: #fff;\r\n    border-radius: 8px;\r\n    padding: 20px;\r\n    text-align: center;\r\n    margin-bottom: 20px;\r\n    box-shadow: 0 2px 12px 0 rgba(0,0,0,0.1);\r\n\r\n    .avatar {\r\n      width: 80px;\r\n      height: 80px;\r\n      line-height: 80px;\r\n      border-radius: 50%;\r\n      background-color: #ff6700;\r\n      color: white;\r\n      margin: 0 auto 15px;\r\n      \r\n      i {\r\n        font-size: 40px;\r\n      }\r\n    }\r\n\r\n    .welcome {\r\n      font-size: 18px;\r\n      color: #333;\r\n      margin-bottom: 5px;\r\n      font-weight: bold;\r\n    }\r\n\r\n    .user-email {\r\n      font-size: 14px;\r\n      color: #666;\r\n      margin-bottom: 15px;\r\n    }\r\n\r\n    .default-address {\r\n      text-align: left;\r\n      margin-top: 15px;\r\n      padding-top: 15px;\r\n      border-top: 1px dashed #e6e6e6;\r\n\r\n      .title {\r\n        font-size: 14px;\r\n        color: #666;\r\n        margin-bottom: 5px;\r\n      }\r\n\r\n      .content {\r\n        font-size: 13px;\r\n        color: #333;\r\n        line-height: 1.4;\r\n      }\r\n    }\r\n  }\r\n\r\n  .user-menu {\r\n    background-color: #fff;\r\n    border-radius: 8px;\r\n    box-shadow: 0 2px 12px 0 rgba(0,0,0,0.1);\r\n\r\n    .el-menu-item {\r\n      font-size: 15px;\r\n      height: 50px;\r\n      line-height: 50px;\r\n\r\n      &:hover, &.is-active {\r\n        color: #ff6700;\r\n        background-color: #fff5f0;\r\n\r\n        i {\r\n          color: #ff6700;\r\n        }\r\n      }\r\n\r\n      i {\r\n        margin-right: 10px;\r\n      }\r\n    }\r\n  }\r\n}\r\n\r\n// 全局样式，消除 element-ui 的默认滚动条\r\n::v-deep .el-main {\r\n  overflow: visible !important;\r\n}\r\n\r\n// 如果需要，也可以添加以下样式来美化必要的滚动条\r\n::-webkit-scrollbar {\r\n  width: 6px;\r\n  height: 6px;\r\n}\r\n\r\n::-webkit-scrollbar-thumb {\r\n  background: #ddd;\r\n  border-radius: 3px;\r\n}\r\n\r\n::-webkit-scrollbar-track {\r\n  background: #f5f5f5;\r\n}\r\n</style> "],"mappings":";;;AA2CA,SAAAA,UAAA;AAEA;EACAC,IAAA;EACAC,KAAA;IACA;MACAC,UAAA;MACAC,cAAA;IACA;EACA;EACAC,QAAA;IACA,GAAAL,UAAA;EACA;EACAM,OAAA;IACAC,aAAAC,GAAA;MACA,IAAAA,GAAA;QACA,KAAAC,OAAA,CAAAC,IAAA;MACA,WAAAF,GAAA;QACA,KAAAC,OAAA,CAAAC,IAAA;MACA;IACA;IACA,MAAAC,mBAAA;MACA;QACA,MAAAC,QAAA,SAAAC,KAAA,8CAAAC,MAAA;QACA,MAAAZ,IAAA,SAAAU,QAAA,CAAAG,IAAA;QACA,IAAAb,IAAA,CAAAc,MAAA,kBAAAC,KAAA,CAAAC,OAAA,CAAAhB,IAAA,CAAAA,IAAA;UACA,KAAAE,cAAA,GAAAF,IAAA,CAAAA,IAAA,CAAAiB,IAAA,CAAAC,IAAA,IAAAA,IAAA,CAAAC,SAAA;QACA;MACA,SAAAC,KAAA;QACAC,OAAA,CAAAD,KAAA,mCAAAA,KAAA;MACA;IACA;EACA;EACAE,QAAA;IACA,MAAAC,IAAA,QAAAC,MAAA,CAAAD,IAAA;IACA,KAAAtB,UAAA,GAAAsB,IAAA,CAAAE,QAAA;IACA,KAAAhB,kBAAA;EACA;EACAiB,KAAA;IACAF,OAAAG,EAAA;MACA,KAAA1B,UAAA,GAAA0B,EAAA,CAAAJ,IAAA,CAAAE,QAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}